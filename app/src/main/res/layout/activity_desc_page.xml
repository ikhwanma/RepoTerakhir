<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescPage"
    android:background="#4d5cf0">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="266dp"
        android:layout_height="136dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/montserrat"
        android:text='SICOKU (Sikat Corona Kuy) merupakan sebuah aplikasi yang bertujuan untuk "self-survey" mendeteksi kemungkinan terkena virus Covid-19  dan informasi lainnya untuk kesehatan masyarakat seperti rumah sakit rujukan atau tips menjaga kesehatan.'
        android:textColor="#FFFFFF"
        android:justificationMode="inter_word"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_next"
        android:fontFamily="@font/montserrat"
        android:text="Selanjutnya"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="252dp"
        android:layout_height="107dp"
        android:layout_margin="178dp"
        android:src="@drawable/logosicoku"
        android:background="@drawable/img_sicoku"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>